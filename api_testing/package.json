{
  "name": "api_testing",
  "version": "1.0.0",
  "description": "Api Testing in JavaScript for the gildedrose backend api",
  "main": "index.js",
  "scripts": {
    "combine-reports": "mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/report.json",
    "generate-report": "marge cypress/reports/report.json -f report -o cypress/reports",
    "test": "npm run lint && mocha --recursive -t 5000 --reporter mochawesome --reporter-options reportDir=report,reportFilename=ApiTesting",
    "lint": "eslint ./test/**/*.js",
    "lint:fix": "npm run lint -- --fix"
  },
  "keywords": [
    "api-testing",
    "mocha",
    "gildedrose"
  ],
  "author": "Sebasti√°n Moreno <juansebasmorenoruiz@gmail.com> (https://github.com/SebMoreno)",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.3.6",
    "chai-json-schema": "^1.5.1",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "http-status-codes": "^2.2.0",
    "mocha": "^10.0.0",
    "mochawesome": "^7.1.3"
  },
  "dependencies": {
    "superagent": "^7.1.3",
    "superagent-promise": "^1.1.0"
  }
}
