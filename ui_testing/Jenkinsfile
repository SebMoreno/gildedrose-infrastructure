pipeline {
    agent any
    tools { nodejs 'node' }
    stages {
        stage('Set Working Directory') {
            steps {
                sh 'ls && cd ui_testing'
            }
        }
        stage('Install dependencies') {
            steps {
                sh '''
                ls
                npm -v
                npm ci
                '''
            }
        }
        stage('UI Testing') {
            steps {
                sh 'npm test'
            }
        }
    }
}
