pipeline {
    agent any
    tools { nodejs 'node' }
    stages {
        stage('Install dependencies') {
            steps {
                dir('ui_testing') {
                sh 'ls ~/.'
                    sh 'npm ci'
                }
            }
        }
        stage('UI Testing') {
            steps {
                dir('ui_testing') {
                    sh 'npm test'
                }
            }
        }
    }
}
