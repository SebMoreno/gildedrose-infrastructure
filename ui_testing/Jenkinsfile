pipeline {
    agent any
    tools { nodejs 'node' }
    stages {
        stage('Install dependencies') {
            steps {
                dir('ui_testing') {
                    sh '''
                    ls
                    npm -v
                    npm ci
                    '''
                }
            }
        }
        stage('UI Testing') {
            steps {
                sh 'npm test'
            }
        }
    }
}
