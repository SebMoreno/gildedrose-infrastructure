pipeline {
    agent any
    tools { nodejs 'node' }
    dir('ui_testing') {
        stages {
            stage('Install dependencies') {
                steps {
                        sh '''
                        ls
                        npm -v
                        npm ci
                        '''
                    }
            }
            stage('UI Testing') {
                steps {
                    sh 'ls && npm test'
                }
            }
        }
    }
}
