pipeline {
    agent any
    tools { nodejs "nodejs" }
    stages {
        stage("Set Working Directory") {
            agent {
                docker {
                    reuseNode true
                    image 'node:alpine'
                }
            }
            steps {
                sh 'cd ui_testing'
            }
        }
        stage("Install dependencies") {
            steps {
                sh 'npm ci'
            }
        }
        stage("UI Testing") {
            steps {
                sh 'npm test'
            }
        }
    }
}
