pipeline {
    agent any
    tools { nodejs 'node' }
    stages {
        stage('Set Working Directory') {
            steps {
                sh 'cd ui_testing'
            }
        }
        stage('Install dependencies') {
            steps {
                sh 'npm ci'
            }
        }
        stage('UI Testing') {
            steps {
                sh 'npm test'
            }
        }
    }
}
