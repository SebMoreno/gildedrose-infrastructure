{
  "name": "ui_testing",
  "version": "1.0.0",
  "description": "UI testing for the gildedrose frontend app",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run clear-report",
    "test": "cypress run",
    "posttest": "npm run combine-reports && npm run generate-report",
    "test:open": "npm run lint && cypress open",
    "lint": "eslint ./cypress/integration/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "clear-report": "rm -rf cypress/reports",
    "combine-reports": "mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/report.json",
    "generate-report": "marge cypress/reports/report.json -f report -o cypress/reports"  
  },
  "keywords": [
    "ui-testing",
    "cypress",
    "gildedrose"
  ],
  "author": "Sebasti√°n Moreno <juansebasmorenoruiz@gmail.com> (https://github.com/SebMoreno)",
  "license": "MIT",
  "devDependencies": {
    "@cypress/webpack-preprocessor": "^5.11.1",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "cypress": "^9.7.0",
    "cypress-mochawesome-reporter": "^3.1.0",
    "cypress-multi-reporters": "^1.6.0",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.26.0",
    "mocha": "^10.0.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.2.1",
    "mochawesome-report-generator": "^6.2.0",
    "ts-loader": "^9.3.0",
    "typescript": "^4.7.2",
    "webpack": "^5.72.1"
  }
}
